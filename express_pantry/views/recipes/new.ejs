<%- include('../partials/header') %>

<form class="show-page" class="new-form" action="/recipes" method="POST">
    <label>recipe:</label>
    <input type="text" name="recipe">
    <label>author:</label>
    <input type="text" name="author">
    <label>source:</label>
    <input type="text" name="source">
    <label>servings:</label>
    <input type="number" name="servings">
    <label>time to make:</label>
    <input type="text" name="time"></input>
    <label>ingredients:</label>
    <textarea type="text" name="ingredients" rows="20" cols="40"></textarea>
    <label>directions:</label>
    <textarea type="text" name="directions" rows="20" cols="40"></textarea>
    <input class="recipes-buttons" type="submit" value="save recipe">
    <br>
    <li> <a class="recipes-buttons" href="/recipes/new">add a new recipe</a></li>
    <li> <a class="recipes-buttons" href="/">back to dashboard</a></li>
</form>

