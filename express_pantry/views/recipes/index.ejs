<%- include('../partials/header') %>
<table class="all-recipes">
  <thead>
    <tr>
        <th>pin?</th>
        <th>recipe</th>
        <th>author</th>
        <th>notes</th>
        <th></th>
    </tr>
  </thead>
  <tbody>
    <% recipes.forEach(function(r) { %>
      <tr>
        <td><input type="checkbox" name="pinned"></td>
        <td><a href="/recipes/<%= r._id %>"><%= r.recipe %></td>
        <td><%= r.author %></td>
        <td><%= r.notes %></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <li> <a class="recipes-buttons" href="/recipes/new">add a new recipe</a></li>
    <li> <a class="recipes-buttons" href="/">back to dashboard</a></li>
  
<%- include('../partials/footer') %>