<%- include('../partials/header') %>
<section class="show-page">
  <table class="lists" id="recipe">
    <thead>
      <tr>
        <th></th>
        <th>recipes</th>
        <th>author</th>
        <th>time to make</th>
        <th>ingredients</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% recipes.forEach((r) => { %>
        <tr>
          <td></td>
          <td><a class="show-links" href="../recipes/<%= r._id %>"><%= r.recipe %></a></td>
          <td><%= r.author %></td>
          <td><%= r.time %></td>
          <td><pre><%= r.ingredients %></pre></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <li> <a class="recipes-buttons" href="/recipes/new">add a new recipe</a></li>
    <li> <a class="recipes-buttons" href="/">back to dashboard</a></li>
</section>
<%- include('../partials/footer') %>